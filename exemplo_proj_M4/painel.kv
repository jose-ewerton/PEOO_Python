#:kivy 2.0.0

<Painel>:
    layout:layout
    labels:labels
    textinput:textinput
    FloatLayout:
        id:layout
        Button:
            background_color: [151/255, 133/255, 204/255,1]
            text: 'Inserir'
            on_press: root.adicionar()
            font_size: 20 
            size_hint:(.3, .1)
            pos_hint:{'x':.05, 'y':.85}
        Button:
            background_color: [151/255, 133/255, 204/255,1]
            text: 'Atualizar'
            on_press: root.adicionar()
            font_size: 20 
            size_hint:(.3, .1)
            pos_hint:{'x':.05, 'y':.70}
