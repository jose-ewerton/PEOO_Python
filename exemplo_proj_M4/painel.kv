            on_press: root.adicionar()
            font_size: 20 
            size_hint:(.3, .1)
            pos_hint:{'x':.05, 'y':.55}
        Button:
            background_color: [151/255, 133/255, 204/255,1]
            text: 'Deletar'
            on_press: root.adicionar()
            font_size: 20 
            size_hint:(.3, .1)
            pos_hint:{'x':.05, 'y':.40}

