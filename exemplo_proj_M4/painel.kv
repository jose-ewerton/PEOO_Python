        Label:
            id:label5
            opacity:0
            color: 'red'
            text: ''
            font_size: 10 
            size_hint:(.1, .1)
            pos_hint:{'x':.6, 'y':.4}
        Button:
            background_color: [151/255, 133/255, 204/255,1]
            text: 'Enviar'
            on_press: root.enviar()
            font_size: 15 
            size_hint:(.2, .05)
            pos_hint:{'x':.6, 'y':.3}
